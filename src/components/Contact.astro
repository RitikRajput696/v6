<section
  id="contact"
  class="mb-16 opacity-0 translate-y-5 animate-fade-in-up delay-400"
>
  <h2
    class="section-title relative inline-block text-terminal-green text-3xl mb-8 before:content-['$_'] before:text-terminal-accent"
  >
    contact
  </h2>
  <div class="grid lg:grid-cols-2 gap-12">
    <!-- Contact Info -->
    <div class="bg-terminal-card border border-terminal-border rounded-lg p-8">
      <div class="space-y-6">
        <div class="flex items-center gap-4 text-terminal-text">
          <span class="text-terminal-green text-xl w-5">@</span>
          <span
            >Email: <a
              href="mailto:hello@yoursite.dev"
              class="text-terminal-accent hover:text-terminal-green transition-colors"
              >hello@yoursite.dev</a
            ></span
          >
        </div>
        <div class="flex items-center gap-4 text-terminal-text">
          <span class="text-terminal-green text-xl w-5">#</span>
          <span
            >GitHub: <a
              href="#"
              target="_blank"
              class="text-terminal-accent hover:text-terminal-green transition-colors"
              >@yourusername</a
            ></span
          >
        </div>
        <div class="flex items-center gap-4 text-terminal-text">
          <span class="text-terminal-green text-xl w-5">~</span>
          <span
            >Twitter: <a
              href="#"
              target="_blank"
              class="text-terminal-accent hover:text-terminal-green transition-colors"
              >@yourhandle</a
            ></span
          >
        </div>
        <div class="flex items-center gap-4 text-terminal-text">
          <span class="text-terminal-green text-xl w-5">$</span>
          <span
            >LinkedIn: <a
              href="#"
              target="_blank"
              class="text-terminal-accent hover:text-terminal-green transition-colors"
              >/in/yourprofile</a
            ></span
          >
        </div>
      </div>
    </div>

    <!-- Terminal Window -->
    <div
      class="bg-terminal-card border border-terminal-border rounded-lg p-6 text-sm"
    >
      <!-- Terminal Header -->
      <div class="flex gap-1.5 mb-4 pb-2 border-b border-terminal-border">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
        <div class="w-3 h-3 bg-green-400 rounded-full"></div>
      </div>
      <!-- Terminal Content -->
      <div class="text-terminal-green space-y-1">
        <div>> cat contact.txt</div>
        <div class="py-1">Let's build something amazing together!</div>
        <div class="py-1">Whether you want to:</div>
        <div>├── Collaborate on open source</div>
        <div>├── Discuss a project idea</div>
        <div>├── Share war stories from the code trenches</div>
        <div>└── Just say hi</div>
        <div class="py-1">I'm always up for a good conversation.</div>
        <div class="pt-2">> send_message --to=me</div>
        <div>
          Connection established <span
            class="inline-block w-0.5 h-4 bg-terminal-green animate-blink ml-1"
          ></span>
        </div>
      </div>
    </div>
  </div>
</section>
